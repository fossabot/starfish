{
  "extends": "../tsconfig",
  "include": ["../@types", "./src"],
  "exclude": [
    "../frontend/**/*",
    "../discord/**/*",
    "../web/**/*",
    "../common/**/*",
    "../server/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist" /* Redirect output structure to the directory. */,
    "rootDir": "./src" /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */,
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "references": [
    {
      "path": "../common/tsconfig.common.json"
    }
  ]
}
